{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2015",
        "module": "commonjs",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "strict": true,
        "allowUnreachableCode": false,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "outDir": ".compiled",
        "typeRoots": [
          "../node_modules/@types"
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.top.html"
    ]
}
