{
  "name": "topside",
  "version": "0.6.5",
  "description": "Type-safe templates for server-side TypeScript applications inspired by Laravel Blade",
  "keywords": [
    "typescript",
    "template",
    "view"
  ],
  "main": "dist/topside.js",
  "typings": "dist/topside.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "author": "Hadrien Milano <github.com/hmil>",
  "repository": {
    "type": "git",
    "url": "https://github.com/hmil/topside.git"
  },
  "bin": "./bin/topside",
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && typedoc --out dist/docs src/topside.ts",
    "start": "tsc-watch --onSuccess \"npm run dist\"",
    "test": "ts-node tools/run-spec",
    "clean": "rimraf spec/output compiled dist"
  },
  "devDependencies": {
    "@types/diff": "3.5.1",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.11.24",
    "colors": "1.3.2",
    "diff": "3.5.0",
    "prettier": "1.14.3",
    "rimraf": "2.6.2",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.0.4",
    "typedoc": "^0.25.9",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@types/escape-html": ">=0.0.19",
    "escape-html": "1.x"
  },
  "dependencies": {
    "@types/escape-html": ">=0.0.19",
    "escape-html": "1.x",
    "glob": "^10.3.10",
    "minimist": "^1.2.8",
    "mkdirp": "^3.0.1",
    "source-map": "^0.7.4"
  }
}
