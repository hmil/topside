{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2015",
        "module": "commonjs",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "outDir": "dist",
        "typeRoots": [
          "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}
